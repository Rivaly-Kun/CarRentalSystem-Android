<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvCourtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Court Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D47A1" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start: 08 Apr 2025, 12:00 PM"
            android:textColor="#333"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End: 09 Apr 2025, 06:00 AM"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Accepted"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cancel Reservation"
            android:textColor="@android:color/white"
            android:backgroundTint="#F44336"
            app:cornerRadius="12dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
